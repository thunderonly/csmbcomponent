<?xml version="1.0" encoding="utf-8"?>
<form>
    <fields name="filter">
        <field
                name="search"
                type="text"
                label="Search"
                hint="JSEARCH_FILTER"
                />

        <field
                name="section"
                type="section"
                label="Search_Name"
                description="Search_Name"
                onchange="this.form.submit();"
                >
            <option value="">COM_CSMBCOMPONENT_ADHERENT_SELECT_SECTION</option>
        </field>

        <field
                name="saison"
                type="saison"
                label="Search_Name"
                description="Search_Name"
                onchange="this.form.submit();"
                >
            <option value="">COM_CSMBCOMPONENT_ADHERENT_SELECT_SAISON</option>
        </field>

        <field
                name="nb_cours"
                type="text"
                label="Search_Name"
                description="Search_Name"
                onchange="this.form.submit();"
                hint="COM_CSMBCOMPONENT_ADHERENT_SELECT_NB_COURS"
                >
        </field>
    </fields>

    <fields name="list">
        <field
                name="limit"
                type="limitbox"
                class="input-mini"
                default="25"
                label="COM_CONTENT_LIST_LIMIT"
                description="COM_CONTENT_LIST_LIMIT_DESC"
                onchange="this.form.submit();"
                />
    </fields>
</form>